<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeetingRoom.Pages.ProjectionView">
    <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="projection" WidthRequest="150" HeightRequest="150"/>

        <VerticalStackLayout VerticalOptions="Center" Margin="20,0,0,0">
            <Label Text="投影模式已启动" FontSize="16" TextColor="#999" Margin="0,0,0,10"/>

            <Button Margin="0" VerticalOptions="Center" HeightRequest="28" Text="开启分项控制" Padding="0"
                    FontSize="11" BackgroundColor="#409EFE" CornerRadius="14"/>
        </VerticalStackLayout>
    </HorizontalStackLayout>
</ContentView>
