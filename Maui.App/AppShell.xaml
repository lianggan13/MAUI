            Title="Meter"
            ContentTemplate="{DataTemplate local:MeterPage}"
            Route="MeterPage" />
    </FlyoutItem>
    <ShellContent
        Title="Device"
        ContentTemplate="{DataTemplate local:DevicePage}"
        Route="DevicePage" />


