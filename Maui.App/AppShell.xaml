    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.App.Views"
    Shell.FlyoutBehavior="Disabled">

    <!--<ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
